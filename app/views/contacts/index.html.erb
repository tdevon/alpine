<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3 border-bottom">
    <h1 class="h2">Contacts</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <%= link_to "New", new_contact_url, :class=>"btn btn-sm btn-outline-secondary"%>
            <button class="btn btn-sm btn-outline-secondary">Accounts</button>
        </div>
        
        <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="plus"></span>
        Add New
        </button>
    </div>
</div>

<input class="form-control form-control-sm form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
<br />

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Company</th>
                <th>Other</th>
            </tr>
        </thead>
        <tbody>
            <% @contacts.each do |contact|%>
                <tr>
                    <td><%= contact.name %></td>
                    <td><%= contact.phone %></td>
                    <td><%= contact.email %></td>
                    <td><%= contact.name %></td>
                    <td><%= contact.name %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>