<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= @group.name %></h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <%= link_to "Edit", edit_group_url(@group), :class=>"btn btn-sm btn-outline-secondary"%>
            <%= link_to "Delete", group_url(@group), method: :delete, :class=>"btn btn-sm btn-outline-secondary"%>
        </div>
        
        <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="plus"></span>
        Add New
        </button>
    </div>
</div>
    <%= render partial: "shared/contacts_table.html.erb", locals: {contacts: @group.contacts}%>
