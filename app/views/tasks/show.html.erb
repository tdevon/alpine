<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= @task.name %></h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <%= link_to "Edit", edit_contact_task_path, :class=>"btn btn-sm btn-outline-secondary"%>
            <%= link_to "Delete", contact_task_path, method: :delete, :class=>"btn btn-sm btn-outline-secondary"%>
        </div>
        
        <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="plus"></span>
        Add New
        </button>
    </div>
</div>
<div class="container">
    <%= task_date.strftime("%A, %B #{task_date.day.ordinalize}, %Y") %><br/>
    <%= task_time.strftime("%I:%M %P")%>
    <br /><br />
    <%= @task.body %>
</div>
